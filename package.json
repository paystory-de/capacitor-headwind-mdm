{
  "name": "@paystory/capacitor-headwind-mdm",
  "version": "1.0.0",
  "description": "Capacitor wrapper for Headwind MDM",
  "main": "dist/plugin.cjs.js",
  "module": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "unpkg": "dist/plugin.js",
  "files": [
    "android/src/main/",
    "android/build.gradle",
    "android/hmdm.aar",
    "dist/"
  ],
  "author": "PayStory",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/paystory-de/capacitor-headwind-mdm.git"
  },
  "bugs": {
    "url": "https://github.com/paystory-de/capacitor-headwind-mdm/issues"
  },
  "keywords": [
    "capacitor",
    "plugin",
    "native",
    "android",
    "headwind mdm"
  ],
  "scripts": {
    "verify": "npm run verify:android",
    "verify:android": "cd android && ./gradlew get-mdm && ./gradlew clean build test && cd ..",
    "lint": "npm run eslint && npm run prettier -- --check",
    "fmt": "npm run eslint -- --fix && npm run prettier -- --write",
    "eslint": "eslint . --ext ts",
    "prettier": "prettier \"**/*.{css,html,ts,js,java}\"",
    "docgen": "docgen --api HeadwindMDMCapacitorPlugin --output-readme README.md --output-json dist/docs.json",
    "build": "npm run clean && npm run docgen && tsc && rollup -c rollup.config.js",
    "clean": "rimraf ./dist",
    "watch": "tsc --watch",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "@capacitor/android": "^3.0.0",
    "@capacitor/core": "^3.0.0",
    "@capacitor/docgen": "^0.0.10",
    "@ionic/eslint-config": "^0.3.0",
    "@ionic/prettier-config": "^1.0.1",
    "eslint": "^7.11.0",
    "prettier": "~2.2.0",
    "prettier-plugin-java": "~1.0.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.32.0",
    "typescript": "~4.0.3"
  },
  "peerDependencies": {
    "@capacitor/core": "^3.0.0"
  },
  "prettier": "@ionic/prettier-config",
  "eslintConfig": {
    "extends": "@ionic/eslint-config/recommended"
  },
  "capacitor": {
    "android": {
      "src": "android"
    }
  }
}
